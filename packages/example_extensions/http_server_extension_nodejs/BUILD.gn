import("//build/feature/ten_package.gni")
import("//build/ten_runtime/feature/publish.gni")
import("//build/ten_runtime/glob.gni")
import("//build/ten_runtime/options.gni")

ten_package("http_server_extension_nodejs") {
  package_kind = "extension"

  resources = [
    "BUILD.gn",
    "manifest.json",
    "package.json",
    "property.json",
    "src/index.ts",
    "tsconfig.json",
  ]

  deps = [ "//core/src/ten_runtime" ]
}

if (ten_enable_ten_manager) {
  ten_package_publish("upload_http_server_extension_nodejs_to_server") {
    base_dir = rebase_path(
            "${root_out_dir}/ten_packages/extension/http_server_extension_nodejs")
    deps = [ ":http_server_extension_nodejs" ]
  }
}
