import("//build/feature/ten_package.gni")
import("//build/options.gni")
import("//build/ten_runtime/feature/publish.gni")
import("//build/ten_runtime/ten.gni")
import("//third_party/googletest/output_libs.gni")

config("gtest_header") {
  include_dirs = [
    ".",
    "include",
    "../googlemock",
    "../googlemock/include",
  ]
}

ten_target("gtest_library") {
  output_name = "gtest"
  type = "shared_library"
  sources = [ "src/gtest-all.cc" ]
  configs = [ ":gtest_header" ]
}

source_set("gtest_all_sources") {
  public_configs = [ ":gtest_header" ]
  sources = [ "src/gtest-all.cc" ]
}

source_set("gtest_main") {
  public_configs = [ ":gtest_header" ]
  sources = [ "src/gtest_main.cc" ]
}

ten_package("gtest_system_package") {
  package_kind = "system"
  package_output_root_dir_name = "googletest"

  resources = [
    "BUILD_release.gn=>BUILD.gn",
    "include",
    "manifest.json",
    "src/gtest_main.cc",
  ]

  foreach(lib, gtest_output_libs) {
    libname = get_path_info(rebase_path(lib), "file")
    resources += [ "${lib}=>lib/${libname}" ]
  }

  deps = [ ":gtest_library" ]
}

if (ten_enable_package_manager) {
  ten_package_publish("upload_gtest_to_server") {
    base_dir = rebase_path("${root_out_dir}/ten_packages/system/googletest")
    deps = [ ":gtest_system_package" ]
  }
}

group("googletest") {
  deps = [ ":gtest_system_package" ]

  if (ten_enable_package_manager) {
    deps += [ ":upload_gtest_to_server" ]
  }
}
