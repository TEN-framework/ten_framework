import("//build/ten_runtime/feature/test.gni")
import("//build/ten_runtime/ten.gni")

ten_package_test_prepare_app("exit_signal_go_app") {
  src_app = "default_app_go"
  src_app_language = "go"
  generated_app_src_root_dir_name = "exit_signal_go_app"

  replace_paths_after_install_app = [
    "exit_signal_go_app/manifest.json",
    "exit_signal_go_app/property.json",
  ]

  replace_paths_after_install_all = [ "exit_signal_go_app/ten_packages/extension/default_extension_go/extension.go" ]

  deps = [
    "//core/src/ten_manager",
    "//packages/core_apps/default_app_go:upload_default_app_go_to_server",
    "//packages/core_extensions/default_extension_go:upload_default_extension_go_to_server",
    "//packages/core_protocols/msgpack:upload_protocol_msgpack_to_server",
  ]
}

ten_package_test_prepare_auxiliary_resources("exit_signal_go_app_test_files") {
  resources = [
    "//tests/ten_runtime/integration/common=>common",
    "__init__.py",
    "test_case.py",
  ]
}

group("exit_signal_go") {
  deps = [
    ":exit_signal_go_app",
    ":exit_signal_go_app_test_files",
  ]
}
