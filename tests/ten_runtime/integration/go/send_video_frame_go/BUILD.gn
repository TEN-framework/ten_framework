import("//build/ten_runtime/feature/test.gni")
import("//build/ten_runtime/ten.gni")

ten_package_test_prepare_app("send_video_frame_go_app") {
  src_app = "default_app_go"
  src_app_language = "go"
  generated_app_src_root_dir_name = "send_video_frame_go_app"

  replace_paths_after_install_app = [
    "send_video_frame_go_app/manifest.json",
    "send_video_frame_go_app/property.json",
    "send_video_frame_go_app/ten_packages/extension/default_extension_go/extension.go",
    "send_video_frame_go_app/ten_packages/extension/default_extension_go/go.mod",
    "send_video_frame_go_app/ten_packages/extension/default_extension_go/manifest.json",
    "send_video_frame_go_app/ten_packages/extension/default_extension_go/property.json",
  ]

  deps = [
    "//core/src/ten_manager",
    "//packages/core_apps/default_app_go:upload_default_app_go_to_server",
    "//packages/core_extensions/default_extension_go:upload_default_extension_go_to_server",
    "//packages/example_extensions/simple_echo_cpp:upload_simple_echo_cpp_to_server",
    "//packages/example_extensions/simple_http_server_cpp:upload_simple_http_server_cpp_to_server",
  ]
}

ten_package_test_prepare_auxiliary_resources(
    "send_video_frame_go_app_test_files") {
  resources = [
    "//tests/ten_runtime/integration/common=>common",
    "__init__.py",
    "test_case.py",
  ]
}

group("send_video_frame_go") {
  deps = [
    ":send_video_frame_go_app",
    ":send_video_frame_go_app_test_files",
  ]
}
