import("//build/ten_runtime/feature/test.gni")
import("//build/ten_runtime/ten.gni")

ten_package_test_prepare_app("send_recv_pcm_python_app") {
  src_app = "default_app_python"
  src_app_language = "python"
  generated_app_src_root_dir_name = "send_recv_pcm_python_app"

  replace_paths_after_install_app = [
    "send_recv_pcm_python_app/manifest.json",
    "send_recv_pcm_python_app/property.json",
  ]

  replace_paths_after_install_all = [
    "send_recv_pcm_python_app/ten_packages/extension/default_extension_python/extension.py",
    "send_recv_pcm_python_app/ten_packages/extension/default_extension_python/requirements.txt",
  ]

  if (ten_enable_ten_manager) {
    deps = [
      "//core/src/ten_manager",
      "//packages/core_apps/default_app_python:upload_default_app_python_to_server",
      "//packages/core_extensions/default_extension_python:upload_default_extension_python_to_server",
      "//packages/example_extensions/simple_echo_cpp:upload_simple_echo_cpp_to_server",
      "//packages/example_extensions/simple_http_server_cpp:upload_simple_http_server_cpp_to_server",
    ]
  }
}

ten_package_test_prepare_auxiliary_resources(
    "send_recv_pcm_python_test_files") {
  resources = [
    "//tests/ten_runtime/integration/common=>common",
    "__init__.py",
    "test_case.py",
    "test_data",
  ]
}

group("send_recv_pcm_python") {
  deps = [
    ":send_recv_pcm_python_app",
    ":send_recv_pcm_python_test_files",
    "//tests/ten_runtime/integration/python:copy_pytest_ini_for_ten_runtime_python_integration_test",
  ]
}
