import("//build/ten_runtime/glob.gni")
import("//build/ten_runtime/ten.gni")

glob("extension_test") {
  file_list = all_native_files

  include_dirs = [
    "//packages",
    "//tests/ten_runtime",
  ]

  deps = [
    "//core/src/ten_runtime",
    "//tests/common/client",
    "//tests/common/server",
  ]

  public_deps = [
    "//third_party/googlemock",
    "//third_party/googletest",
  ]

  deps += [
    "basic",
    "command",
    "dest",
    "engine",
    "error",
    "extension",
    "extension_group",
    "graph",
    "graph_name",
    "lock",
    "msg_property",
    "multi_dest",
    "outer_thread",
    "path",
    "predefined_graph",
    "prepare_to_stop",
    "property",
    "resp_handler",
    "return",
    "same_thread_ext_on_xxx",
    "start_graph",
    "suspend_resume",
    "ten_proxy",
    "timer",
  ]

  if (ten_enable_libwebsockets && ten_enable_curl) {
    deps += [ "http_server_extension" ]
  }

  deps += [ "concurrent" ]
}
